    <h1>IdeaBox</h1>

    <form action="/<%= idea.id %>" method='POST'>
      <p>
        <% if idea.id %>
          Edit your Idea:
        <% else %>
          Your Idea:
        <% end %>
      </p>
      <% if idea.id %>
        <input type="hidden" name="_method" value="PUT" />
      <% end %>
      Title:<br/><input type='text' name='idea[title]' value="<%= idea.title %>"/><br/>
      Description:<br/><textarea name='idea[description]'><%= idea.description %></textarea><br/>
      Tag:<br/><textarea name='idea[tag]'><%= idea.tag %></textarea><br/>
      Resource:<br/><textarea name='idea[resource]'><%= idea.resource %></textarea><br/>
      <input class='button' type='submit'/>
    </form>
